@model MyApp.Models.ViewModel.ProductVM
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="product.ImageUrl" />
    <div class="row border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.product == null || Model.product.Id == 0) ? "Add" : "Update")</h2>
            <br />
        </div>
        <input type="hidden" asp-for="product.Id" />

        <div asp-validation-summary="All"></div>
        <div class="row pb-3">
            <label asp-for="product.Name"></label>
            <input asp-for="product.Name" class="form-control" />
            <span asp-validation-for="product.Name" class="text-danger"></span>
        </div>
        <div class="row pb-3">
            <label asp-for="product.Description"></label>
            <input asp-for="product.Description" class="form-control" />
            <span asp-validation-for="product.Description" class="text-danger"></span>
        </div>
        <div class="row pb-3">
            <label asp-for="product.Price"></label>
            <input asp-for="product.Price" class="form-control" />
            <span asp-validation-for="product.Price" class="text-danger"></span>
        </div>
        <div class="row pb-3">
            <label asp-for="product.ImageUrl"></label>
            <input type="file" id="imagefile" name="file" class="form-select" required />
        </div>

        <div class="row pb-3">
            <label asp-for="product.CategoryId"></label>
            <select asp-for="product.CategoryId" asp-items="@Model.categories" class="form-control">
                <option selected disabled>--Select Category</option>
            </select>
            <span asp-validation-for="product.CategoryId" class="text-danger"></span>
        </div>
        
        @if (Model.product == null || Model.product.Id == 0)
        {
            <button class="btn btn-primary" onclick="return ValidateEmpty()" type="submit">Add Product</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update Product</button>
        }
    </div>
    <a asp-area="Admin" asp-action="index" asp-controller="product">Get Back</a>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    <script>
        function ValidateEmpty() {
            if (document.getElementById("imagefile").value == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Upload Image!'
                });
                return false;
            }
            else {
                return true;
            }
        }
    </script>
}